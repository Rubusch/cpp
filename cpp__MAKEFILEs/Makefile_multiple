# Makefile (simple)
#
# use -O, -O1, -O2 for optimization 


SOURCE = main.cpp file1.cpp file2.cpp
HEADERS = fileWithTemplates.hpp file1.hpp file2.hpp
OBJECTS = ${SOURCE:.cpp=.o}

.PREFIXES = .cpp .o
CC = g++
CFLAGS = -g -Wall
RM = rm -f

.cpp.o:
	${CC} -c ${CFLAGS} $<

programname.exe: ${OBJECTS}
	${CC} -o $@ ${OBJECTS} -lm

all: programname.exe

clean: 
	${RM} $(OBJECTS) programname.exe *~ core
